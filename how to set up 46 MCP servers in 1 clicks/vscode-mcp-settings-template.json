{
  "mcpServers": {
    "// 說明": "這是 MCP 伺服器配置模板，請將此內容複製到您的 VS Code settings.json 文件中",
    "// 注意": "使用前請確保已設置相應的環境變量",
    
    "// === AI Services ===": "",
    "openai": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-openai"],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      }
    },
    "anthropic": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-anthropic"],
      "env": {
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}"
      }
    },
    "huggingface": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-huggingface"],
      "env": {
        "HUGGINGFACE_API_TOKEN": "${HUGGINGFACE_API_TOKEN}"
      }
    },
    "llamacloud": {
      "command": "python",
      "args": ["-m", "llama_index.server"],
      "env": {
        "LLAMA_CLOUD_API_KEY": "${LLAMA_CLOUD_API_KEY}"
      }
    },
    "chroma": {
      "command": "python",
      "args": ["-m", "mcp_server_chroma"],
      "env": {
        "CHROMA_HOST": "${CHROMA_HOST:-localhost}",
        "CHROMA_PORT": "${CHROMA_PORT:-8000}"
      }
    },
    
    "// === Databases ===": "",
    "postgres": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${POSTGRES_CONNECTION_STRING}"
      }
    },
    "sqlite": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-sqlite"]
    },
    "mongodb": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-mongodb"],
      "env": {
        "MONGODB_URI": "${MONGODB_URI}"
      }
    },
    "redis": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-redis"],
      "env": {
        "REDIS_URL": "${REDIS_URL}"
      }
    },
    
    "// === Productivity ===": "",
    "notion": {
      "command": "npx",
      "args": ["@notion/mcp-server"],
      "env": {
        "NOTION_API_KEY": "${NOTION_API_KEY}"
